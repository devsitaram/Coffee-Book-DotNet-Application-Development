@inject NavigationManager NavManager
<script src="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.0/font/bootstrap-icons.js"></script>

<div class="sidebar">
	<div class="top-row ps-3 navbar navbar-dark">
		<div class="container-fluid">
			<a class="navbar-brand" href="">BisleriumCafe</a>
		</div>
	</div>

	<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

	<div class="nav-scrollable" style="background-color: darkblue;" onclick="document.querySelector('.navbar-toggler').click()">
		<nav class="flex-column">
			<div class="nav-item px-3">
				<NavLink class="nav-link" href="home" Match="NavLinkMatch.All">
					<span aria-hidden="true"></span> Home
				</NavLink>
			</div>
			@if (UserServices.CurrentUser!=null && UserServices.CurrentUser.Role == Role.Admin)
			{
				<div class="nav-item px-3">
					<NavLink class="nav-link" href="addCoffee">
						<span aria-hidden="true"></span> Add Coffee
					</NavLink>
				</div>
			}

			<div class="nav-item px-3">
				<NavLink class="nav-link" href="revenue">
					<span aria-hidden="true"></span> Revenue
				</NavLink>
			</div>

			<div class="nav-item px-3">
				<NavLink class="nav-link" href="change-password">
					<span aria-hidden="true"></span> ChangePassword
				</NavLink>
			</div>

			<div class="nav-item px-3">
				<NavLink class="nav-link" role="button" @onclick="LogoutHandler">
					<span aria-hidden="true"></span> Log Out
				</NavLink>
			</div>
		</nav>
	</div>
</div>

@code {
	private void LogoutHandler(){
		UserServices.CurrentUser = null;
		NavManager.NavigateTo("/");
	}
}